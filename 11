#include<stdio.h>
#include<math.h>
int main(){
    
    int i,n,sum;
    sum=0;
    printf("enter the nth term\n");
    scanf("%d",&n);
    
    if(n>=1)
    {for(i=1;i<=n;i++)
    {  sum=sum+pow(2,i)-1;
        
    }
        
    printf("The sum of the first %d terms is %d\n",n,sum);
    }
    
    else
    {printf("you have not entered a natural number\n");}
    return 0;
}
