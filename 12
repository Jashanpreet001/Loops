#include<stdio.h>

int main(){
    
    int i,n,factorail;
    factorail=1;
    printf("enter the number you want the factorial of \n");
    scanf("%d",&n);
    
    if(n==0)
    {factorail=1;}
    
    else if(n>0)
    {for(i=1;i<=n;i++)
    { factorail=factorail*i;
    
        }
        
    printf("The sum of the first %d terms is %d\n",n,factorail);
    }
    
    else
    {printf("you have not entered a whole number\n");}
    return 0;
}
